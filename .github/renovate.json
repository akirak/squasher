{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "automation",
    "dependencies",
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["lockFileMaintenance"],
      "automerge": true
    },
    {
      "matchDatasources": ["github-actions"],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["every month"]
  },
  "github-actions": {
    "enabled": true
  },
  "nix": {
    "enabled": true
  }
}
